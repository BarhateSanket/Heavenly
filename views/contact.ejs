<% layout("layouts/boilerplate") %>

<div class="container-fluid py-5">
    <div class="row justify-content-center">
        <div class="col-lg-10">
            <!-- Hero Section -->
            <div class="text-center mb-5">
                <h1 class="display-4 fw-bold mb-3">Contact Us</h1>
                <p class="lead text-muted">Get in touch with our team. We're here to help!</p>
            </div>

            <div class="row g-5">
                <!-- Contact Form -->
                <div class="col-lg-8">
                    <div class="card shadow-sm">
                        <div class="card-header bg-primary text-white">
                            <h3 class="card-title mb-0">Send us a Message</h3>
                        </div>
                        <div class="card-body p-4">
                            <form action="/contact" method="POST">
                                <div class="row g-3">
                                    <div class="col-md-6">
                                        <label for="firstName" class="form-label">First Name *</label>
                                        <input type="text" class="form-control" id="firstName" name="firstName" required>
                                    </div>
                                    <div class="col-md-6">
                                        <label for="lastName" class="form-label">Last Name *</label>
                                        <input type="text" class="form-control" id="lastName" name="lastName" required>
                                    </div>
                                </div>
                                <div class="mb-3">
                                    <label for="email" class="form-label">Email Address *</label>
                                    <input type="email" class="form-control" id="email" name="email" required>
                                </div>
                                <div class="mb-3">
                                    <label for="subject" class="form-label">Subject *</label>
                                    <select class="form-select" id="subject" name="subject" required>
                                        <option value="">Choose a subject</option>
                                        <option value="general">General Inquiry</option>
                                        <option value="support">Technical Support</option>
                                        <option value="booking">Booking Help</option>
                                        <option value="hosting">Become a Host</option>
                                        <option value="partnership">Partnership</option>
                                        <option value="press">Press/Media</option>
                                        <option value="other">Other</option>
                                    </select>
                                </div>
                                <div class="mb-3">
                                    <label for="message" class="form-label">Message *</label>
                                    <textarea class="form-control" id="message" name="message" rows="6" placeholder="Tell us how we can help you..." required></textarea>
                                </div>
                                <button type="submit" class="btn btn-primary btn-lg">Send Message</button>
                            </form>
                        </div>
                    </div>
                </div>

                <!-- Contact Information -->
                <div class="col-lg-4">
                    <div class="row g-4">
                        <!-- Support Information -->
                        <div class="col-12">
                            <div class="card shadow-sm h-100">
                                <div class="card-header bg-success text-white">
                                    <h5 class="card-title mb-0">
                                        <i class="fas fa-headset me-2"></i>Support Center
                                    </h5>
                                </div>
                                <div class="card-body">
                                    <div class="mb-3">
                                        <h6>24/7 Customer Support</h6>
                                        <p class="text-muted small mb-2">Available in multiple languages</p>
                                        <a href="tel:+1-800-HEAVENLY" class="btn btn-outline-success btn-sm w-100 mb-2">
                                            <i class="fas fa-phone me-2"></i>Call Us
                                        </a>
                                        <a href="/help-center" class="btn btn-outline-success btn-sm w-100">
                                            <i class="fas fa-question-circle me-2"></i>Help Center
                                        </a>
                                    </div>
                                    <hr>
                                    <div>
                                        <h6>Response Time</h6>
                                        <p class="text-muted small">We typically respond within 24 hours</p>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <!-- Office Locations -->
                        <div class="col-12">
                            <div class="card shadow-sm h-100">
                                <div class="card-header bg-info text-white">
                                    <h5 class="card-title mb-0">
                                        <i class="fas fa-map-marker-alt me-2"></i>Our Offices
                                    </h5>
                                </div>
                                <div class="card-body">
                                    <div class="mb-3">
                                        <h6 class="text-primary">Headquarters</h6>
                                        <address class="text-muted small mb-0">
                                            123 Travel Street<br>
                                            San Francisco, CA 94105<br>
                                            United States
                                        </address>
                                    </div>
                                    <hr>
                                    <div class="mb-3">
                                        <h6 class="text-primary">Europe Office</h6>
                                        <address class="text-muted small mb-0">
                                            456 Adventure Avenue<br>
                                            Berlin, 10117<br>
                                            Germany
                                        </address>
                                    </div>
                                    <hr>
                                    <div>
                                        <h6 class="text-primary">Asia Pacific</h6>
                                        <address class="text-muted small mb-0">
                                            789 Discovery Road<br>
                                            Singapore, 018956<br>
                                            Singapore
                                        </address>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <!-- Social Media -->
                        <div class="col-12">
                            <div class="card shadow-sm">
                                <div class="card-header bg-warning text-dark">
                                    <h5 class="card-title mb-0">
                                        <i class="fas fa-share-alt me-2"></i>Follow Us
                                    </h5>
                                </div>
                                <div class="card-body text-center">
                                    <div class="row g-2">
                                        <div class="col-4">
                                            <a href="#" class="btn btn-outline-primary btn-sm w-100">
                                                <i class="fab fa-facebook-f"></i>
                                            </a>
                                        </div>
                                        <div class="col-4">
                                            <a href="#" class="btn btn-outline-info btn-sm w-100">
                                                <i class="fab fa-twitter"></i>
                                            </a>
                                        </div>
                                        <div class="col-4">
                                            <a href="#" class="btn btn-outline-danger btn-sm w-100">
                                                <i class="fab fa-instagram"></i>
                                            </a>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- FAQ Section -->
            <div class="row mt-5">
                <div class="col-12">
                    <div class="card shadow-sm">
                        <div class="card-header bg-light">
                            <h3 class="card-title mb-0">Frequently Asked Questions</h3>
                        </div>
                        <div class="card-body">
                            <div class="accordion" id="contactFAQ">
                                <div class="accordion-item">
                                    <h2 class="accordion-header">
                                        <button class="accordion-button" type="button" data-bs-toggle="collapse" data-bs-target="#faq1">
                                            How quickly will I receive a response?
                                        </button>
                                    </h2>
                                    <div id="faq1" class="accordion-collapse collapse show" data-bs-parent="#contactFAQ">
                                        <div class="accordion-body">
                                            We strive to respond to all inquiries within 24 hours during business days. For urgent matters, please call our support line directly.
                                        </div>
                                    </div>
                                </div>
                                <div class="accordion-item">
                                    <h2 class="accordion-header">
                                        <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#faq2">
                                            Can I contact you in languages other than English?
                                        </button>
                                    </h2>
                                    <div id="faq2" class="accordion-collapse collapse" data-bs-parent="#contactFAQ">
                                        <div class="accordion-body">
                                            Yes! Our support team speaks multiple languages including Spanish, French, German, Italian, and Mandarin. Please specify your preferred language in your message.
                                        </div>
                                    </div>
                                </div>
                                <div class="accordion-item">
                                    <h2 class="accordion-header">
                                        <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#faq3">
                                            How can I report a problem with my booking?
                                        </button>
                                    </h2>
                                    <div id="faq3" class="accordion-collapse collapse" data-bs-parent="#contactFAQ">
                                        <div class="accordion-body">
                                            For booking-related issues, please use the contact form above and select "Booking Help" as the subject, or call our 24/7 support line for immediate assistance.
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>