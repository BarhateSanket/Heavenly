<%- layout("layouts/boilerplate") %>

<div class="container-fluid">
    <%- include("../includes/breadcrumb") %>
    <div class="row">
        <div class="col-lg-8">
            <!-- Booking Details -->
            <div class="card mb-4">
                <div class="card-body">
                    <div class="d-flex align-items-start mb-4">
                        <img src="<%= booking.listing.image %>" alt="<%= booking.listing.title %>" class="rounded me-3" style="width: 120px; height: 90px; object-fit: cover;">
                        <div class="flex-grow-1">
                            <h2 class="mb-1"><%= booking.listing.title %></h2>
                            <p class="text-muted mb-2"><%= booking.listing.location %>, <%= booking.listing.country %></p>
                            <div class="d-flex align-items-center">
                                <span class="badge bg-<%= booking.status === 'confirmed' ? 'success' : booking.status === 'pending' ? 'warning' : booking.status === 'cancelled' ? 'danger' : 'secondary' %> me-2">
                                    <%= booking.status.charAt(0).toUpperCase() + booking.status.slice(1) %>
                                </span>
                                <% if (isGuest) { %>
                                    <small class="text-muted">Hosted by <%= booking.listing.owner.username %></small>
                                <% } else if (isHost) { %>
                                    <small class="text-muted">Guest: <%= booking.guest.username %></small>
                                <% } %>
                            </div>
                        </div>
                    </div>

                    <div class="row g-4">
                        <div class="col-md-6">
                            <h5 class="mb-3">Trip Details</h5>
                            <div class="mb-3">
                                <small class="text-muted d-block">Check-in</small>
                                <span class="fw-medium"><%= new Date(booking.checkIn).toLocaleDateString('en-US', { weekday: 'long', year: 'numeric', month: 'long', day: 'numeric' }) %></span>
                            </div>
                            <div class="mb-3">
                                <small class="text-muted d-block">Check-out</small>
                                <span class="fw-medium"><%= new Date(booking.checkOut).toLocaleDateString('en-US', { weekday: 'long', year: 'numeric', month: 'long', day: 'numeric' }) %></span>
                            </div>
                            <div class="mb-3">
                                <small class="text-muted d-block">Guests</small>
                                <span class="fw-medium"><%= booking.guests %> guest<%= booking.guests > 1 ? 's' : '' %></span>
                            </div>
                        </div>

                        <div class="col-md-6">
                            <h5 class="mb-3">Payment Details</h5>
                            <div class="mb-3">
                                <small class="text-muted d-block">Price per night</small>
                                <span class="fw-medium">₹<%= booking.listing.price.toLocaleString("en-IN") %></span>
                            </div>
                            <div class="mb-3">
                                <small class="text-muted d-block">Number of nights</small>
                                <span class="fw-medium"><%= Math.ceil((new Date(booking.checkOut) - new Date(booking.checkIn)) / (1000 * 60 * 60 * 24)) %></span>
                            </div>
                            <hr>
                            <div class="mb-3">
                                <strong class="d-block">Total</strong>
                                <span class="h5 text-primary">₹<%= booking.totalPrice.toLocaleString("en-IN") %></span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Listing Information -->
            <div class="card mb-4">
                <div class="card-body">
                    <h5 class="mb-3">About this place</h5>
                    <p class="mb-3"><%= booking.listing.description %></p>
                    <a href="/listings/<%= booking.listing._id %>" class="btn btn-outline-primary">View Listing</a>
                </div>
            </div>
        </div>

        <div class="col-lg-4">
            <!-- Actions Card -->
            <div class="card sticky-top" style="top: 2rem;">
                <div class="card-body">
                    <h5 class="mb-3">Actions</h5>

                    <% if (isGuest) { %>
                        <% if (booking.status === 'pending') { %>
                            <p class="text-muted small mb-3">Your booking request is pending approval from the host.</p>
                        <% } else if (booking.status === 'confirmed') { %>
                            <p class="text-success small mb-3">✓ Your booking is confirmed!</p>
                        <% } else if (booking.status === 'cancelled') { %>
                            <p class="text-danger small mb-3">This booking has been cancelled.</p>
                        <% } %>

                        <% if (booking.status === 'pending' || booking.status === 'confirmed') { %>
                            <form method="POST" action="/bookings/<%= booking._id %>?_method=DELETE"
                                  onsubmit="return confirm('Are you sure you want to cancel this booking? This action cannot be undone.')">
                                <button type="submit" class="btn btn-outline-danger w-100 mb-2">Cancel Booking</button>
                            </form>
                        <% } %>

                        <a href="/bookings" class="btn btn-outline-secondary w-100">Back to My Bookings</a>

                    <% } else if (isHost) { %>
                        <% if (booking.status === 'pending') { %>
                            <p class="text-warning small mb-3">This guest is waiting for your approval.</p>
                            <div class="d-grid gap-2">
                                <form method="POST" action="/bookings/<%= booking._id %>/status?_method=PUT">
                                    <input type="hidden" name="status" value="confirmed">
                                    <button type="submit" class="btn btn-success w-100">Confirm Booking</button>
                                </form>
                                <form method="POST" action="/bookings/<%= booking._id %>/status?_method=PUT">
                                    <input type="hidden" name="status" value="cancelled">
                                    <button type="submit" class="btn btn-outline-danger w-100">Decline Booking</button>
                                </form>
                            </div>
                        <% } else if (booking.status === 'confirmed') { %>
                            <p class="text-success small mb-3">✓ This booking is confirmed.</p>
                            <form method="POST" action="/bookings/<%= booking._id %>/status?_method=PUT">
                                <input type="hidden" name="status" value="cancelled">
                                <button type="submit" class="btn btn-outline-danger w-100 mb-2"
                                        onclick="return confirm('Are you sure you want to cancel this confirmed booking?')">Cancel Booking</button>
                            </form>
                        <% } else if (booking.status === 'cancelled') { %>
                            <p class="text-danger small mb-3">This booking has been cancelled.</p>
                        <% } %>

                        <a href="/bookings" class="btn btn-outline-secondary w-100">Back to My Hosting</a>
                    <% } %>
                </div>
            </div>
        </div>
    </div>
</div>