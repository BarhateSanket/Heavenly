<%- layout("layouts/boilerplate") %>

<div class="container-fluid">
    <%- include("../includes/breadcrumb") %>
    <div class="row">
        <div class="col-12">
            <h1 class="mb-4">My Bookings</h1>

            <!-- Navigation Tabs -->
            <ul class="nav nav-tabs mb-4" id="bookingTabs" role="tablist">
                <li class="nav-item" role="presentation">
                    <button class="nav-link active" id="guest-tab" data-bs-toggle="tab" data-bs-target="#guest" type="button" role="tab">My Trips</button>
                </li>
                <li class="nav-item" role="presentation">
                    <button class="nav-link" id="host-tab" data-bs-toggle="tab" data-bs-target="#host" type="button" role="tab">Hosting</button>
                </li>
            </ul>

            <div class="tab-content" id="bookingTabsContent">
                <!-- Guest Bookings Tab -->
                <div class="tab-pane fade show active" id="guest" role="tabpanel">
                    <h3 class="mb-3">My Trips</h3>
                    <% if (guestBookings && guestBookings.length > 0) { %>
                        <div class="row">
                            <% guestBookings.forEach(booking => { %>
                                <div class="col-lg-6 col-xl-4 mb-4">
                                    <div class="card h-100">
                                        <div class="card-body">
                                            <div class="d-flex align-items-start mb-3">
                                                <img src="<%= booking.listing.image %>" alt="<%= booking.listing.title %>" class="rounded me-3" style="width: 80px; height: 60px; object-fit: cover;">
                                                <div class="flex-grow-1">
                                                    <h6 class="card-title mb-1"><%= booking.listing.title %></h6>
                                                    <p class="text-muted small mb-0"><%= booking.listing.location %>, <%= booking.listing.country %></p>
                                                </div>
                                            </div>

                                            <div class="row g-2 mb-3">
                                                <div class="col-6">
                                                    <small class="text-muted d-block">Check-in</small>
                                                    <span class="fw-medium"><%= new Date(booking.checkIn).toLocaleDateString() %></span>
                                                </div>
                                                <div class="col-6">
                                                    <small class="text-muted d-block">Check-out</small>
                                                    <span class="fw-medium"><%= new Date(booking.checkOut).toLocaleDateString() %></span>
                                                </div>
                                            </div>

                                            <div class="mb-3">
                                                <small class="text-muted d-block">Guests</small>
                                                <span class="fw-medium"><%= booking.guests %> guest<%= booking.guests > 1 ? 's' : '' %></span>
                                            </div>

                                            <div class="mb-3">
                                                <small class="text-muted d-block">Total Price</small>
                                                <span class="fw-medium">₹<%= booking.totalPrice.toLocaleString("en-IN") %></span>
                                            </div>

                                            <div class="mb-3">
                                                <span class="badge bg-<%= booking.status === 'confirmed' ? 'success' : booking.status === 'pending' ? 'warning' : booking.status === 'cancelled' ? 'danger' : 'secondary' %>">
                                                    <%= booking.status.charAt(0).toUpperCase() + booking.status.slice(1) %>
                                                </span>
                                            </div>

                                            <div class="d-flex gap-2">
                                                <a href="/bookings/<%= booking._id %>" class="btn btn-outline-primary btn-sm">View Details</a>
                                                <% if (booking.status === 'pending' || booking.status === 'confirmed') { %>
                                                    <form method="POST" action="/bookings/<%= booking._id %>?_method=DELETE" class="d-inline"
                                                          onsubmit="return confirm('Are you sure you want to cancel this booking?')">
                                                        <button type="submit" class="btn btn-outline-danger btn-sm">Cancel</button>
                                                    </form>
                                                <% } %>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            <% }); %>
                        </div>
                    <% } else { %>
                        <div class="text-center py-5">
                            <i class="fas fa-calendar-times fa-3x text-muted mb-3"></i>
                            <h5 class="text-muted">No trips booked yet</h5>
                            <p class="text-muted">Time to dust off your bags and start planning your next adventure!</p>
                            <a href="/listings" class="btn btn-primary">Browse Listings</a>
                        </div>
                    <% } %>
                </div>

                <!-- Host Bookings Tab -->
                <div class="tab-pane fade" id="host" role="tabpanel">
                    <h3 class="mb-3">My Hosting</h3>
                    <% if (hostBookings && hostBookings.length > 0) { %>
                        <div class="row">
                            <% hostBookings.forEach(booking => { %>
                                <div class="col-lg-6 col-xl-4 mb-4">
                                    <div class="card h-100">
                                        <div class="card-body">
                                            <div class="d-flex align-items-start mb-3">
                                                <img src="<%= booking.listing.image %>" alt="<%= booking.listing.title %>" class="rounded me-3" style="width: 80px; height: 60px; object-fit: cover;">
                                                <div class="flex-grow-1">
                                                    <h6 class="card-title mb-1"><%= booking.listing.title %></h6>
                                                    <p class="text-muted small mb-0"><%= booking.listing.location %>, <%= booking.listing.country %></p>
                                                </div>
                                            </div>

                                            <div class="mb-3">
                                                <small class="text-muted d-block">Guest</small>
                                                <span class="fw-medium"><%= booking.guest.username %></span>
                                            </div>

                                            <div class="row g-2 mb-3">
                                                <div class="col-6">
                                                    <small class="text-muted d-block">Check-in</small>
                                                    <span class="fw-medium"><%= new Date(booking.checkIn).toLocaleDateString() %></span>
                                                </div>
                                                <div class="col-6">
                                                    <small class="text-muted d-block">Check-out</small>
                                                    <span class="fw-medium"><%= new Date(booking.checkOut).toLocaleDateString() %></span>
                                                </div>
                                            </div>

                                            <div class="mb-3">
                                                <small class="text-muted d-block">Guests</small>
                                                <span class="fw-medium"><%= booking.guests %> guest<%= booking.guests > 1 ? 's' : '' %></span>
                                            </div>

                                            <div class="mb-3">
                                                <small class="text-muted d-block">Total Price</small>
                                                <span class="fw-medium">₹<%= booking.totalPrice.toLocaleString("en-IN") %></span>
                                            </div>

                                            <div class="mb-3">
                                                <span class="badge bg-<%= booking.status === 'confirmed' ? 'success' : booking.status === 'pending' ? 'warning' : booking.status === 'cancelled' ? 'danger' : 'secondary' %>">
                                                    <%= booking.status.charAt(0).toUpperCase() + booking.status.slice(1) %>
                                                </span>
                                            </div>

                                            <div class="d-flex gap-2">
                                                <a href="/bookings/<%= booking._id %>" class="btn btn-outline-primary btn-sm">View Details</a>
                                                <% if (booking.status === 'pending') { %>
                                                    <form method="POST" action="/bookings/<%= booking._id %>/status?_method=PUT" class="d-inline">
                                                        <input type="hidden" name="status" value="confirmed">
                                                        <button type="submit" class="btn btn-success btn-sm">Confirm</button>
                                                    </form>
                                                    <form method="POST" action="/bookings/<%= booking._id %>/status?_method=PUT" class="d-inline">
                                                        <input type="hidden" name="status" value="cancelled">
                                                        <button type="submit" class="btn btn-outline-danger btn-sm">Decline</button>
                                                    </form>
                                                <% } %>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            <% }); %>
                        </div>
                    <% } else { %>
                        <div class="text-center py-5">
                            <i class="fas fa-home fa-3x text-muted mb-3"></i>
                            <h5 class="text-muted">No bookings yet</h5>
                            <p class="text-muted">Your listings are ready for guests!</p>
                            <a href="/listings/new" class="btn btn-primary">Create Listing</a>
                        </div>
                    <% } %>
                </div>
            </div>
        </div>
    </div>
</div>