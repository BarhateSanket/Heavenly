<% layout("layouts/boilerplate") %>

<div class="container-fluid">
    <!-- Header Section -->
    <div class="row mt-4 mb-4">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <div>
                    <h1 class="mb-0">Billing History</h1>
                    <p class="text-muted mb-0">View and manage your payment history and earnings</p>
                </div>
                <div class="d-flex gap-2">
                    <button class="btn btn-outline-primary" data-bs-toggle="modal" data-bs-target="#exportModal">
                        <i class="fas fa-download me-2"></i>Export Data
                    </button>
                    <a href="/users/dashboard" class="btn btn-outline-secondary">
                        <i class="fas fa-arrow-left me-2"></i>Back to Dashboard
                    </a>
                </div>
            </div>
        </div>
    </div>

    <!-- Financial Overview Cards -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="row g-3">
                <!-- Guest Payments Summary -->
                <div class="col-lg-3 col-md-6">
                    <div class="card h-100 text-center">
                        <div class="card-body">
                            <div class="stats-icon mb-2">
                                <i class="fas fa-credit-card text-primary"></i>
                            </div>
                            <h4 class="mb-1"><%= currency %> <%= summary.guest.totalSpent.toLocaleString() %></h4>
                            <p class="text-muted mb-0">Total Spent (Guest)</p>
                            <small class="text-success">
                                <%= summary.guest.completed %> completed • <%= summary.guest.pending %> pending
                            </small>
                        </div>
                    </div>
                </div>

                <!-- Host Earnings Summary -->
                <% if (isHost) { %>
                    <div class="col-lg-3 col-md-6">
                        <div class="card h-100 text-center">
                            <div class="card-body">
                                <div class="stats-icon mb-2">
                                    <i class="fas fa-money-bill-wave text-success"></i>
                                </div>
                                <h4 class="mb-1"><%= currency %> <%= summary.host.totalEarned.toLocaleString() %></h4>
                                <p class="text-muted mb-0">Total Earned (Host)</p>
                                <small class="text-success">
                                    <%= summary.host.processed %> processed • <%= summary.host.pending %> pending
                                </small>
                            </div>
                        </div>
                    </div>
                <% } %>

                <!-- Refunds -->
                <div class="col-lg-3 col-md-6">
                    <div class="card h-100 text-center">
                        <div class="card-body">
                            <div class="stats-icon mb-2">
                                <i class="fas fa-undo text-info"></i>
                            </div>
                            <h4 class="mb-1"><%= currency %> <%= summary.guest.refunded.toLocaleString() %></h4>
                            <p class="text-muted mb-0">Refunds Received</p>
                            <small class="text-muted">
                                Platform refunds and chargebacks
                            </small>
                        </div>
                    </div>
                </div>

                <!-- Commission (for hosts) -->
                <% if (isHost) { %>
                    <div class="col-lg-3 col-md-6">
                        <div class="card h-100 text-center">
                            <div class="card-body">
                                <div class="stats-icon mb-2">
                                    <i class="fas fa-percentage text-warning"></i>
                                </div>
                                <h4 class="mb-1"><%= currency %> <%= summary.host.commission.toLocaleString() %></h4>
                                <p class="text-muted mb-0">Platform Commission</p>
                                <small class="text-muted">
                                    15% fee on earnings
                                </small>
                            </div>
                        </div>
                    </div>
                <% } else { %>
                    <div class="col-lg-3 col-md-6">
                        <div class="card h-100 text-center">
                            <div class="card-body">
                                <div class="stats-icon mb-2">
                                    <i class="fas fa-chart-line text-danger"></i>
                                </div>
                                <h4 class="mb-1"><%= transactions.length %></h4>
                                <p class="text-muted mb-0">Total Transactions</p>
                                <small class="text-muted">
                                    All time payments
                                </small>
                            </div>
                        </div>
                    </div>
                <% } %>
            </div>
        </div>
    </div>

    <!-- Charts Section (if enough data) -->
    <% if (summary.monthly && summary.monthly.length > 0) { %>
        <div class="row mb-4">
            <div class="col-12">
                <div class="card">
                    <div class="card-header">
                        <h5 class="mb-0">
                            <i class="fas fa-chart-area me-2"></i>Monthly Overview
                        </h5>
                    </div>
                    <div class="card-body">
                        <canvas id="monthlyChart" width="400" height="100" data-monthly-data='<%- JSON.stringify(summary.monthly) %>'></canvas>
                    </div>
                </div>
            </div>
        </div>
    <% } %>

    <!-- Filters and Search -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="card">
                <div class="card-body">
                    <form method="GET" action="/users/billing" class="row g-3">
                        <div class="col-lg-3 col-md-6">
                            <label for="search" class="form-label">Search</label>
                            <input type="text" class="form-control" id="search" name="search" 
                                   value="<%= filters.search %>" placeholder="Transaction ID, description...">
                        </div>
                        <div class="col-lg-2 col-md-6">
                            <label for="status" class="form-label">Status</label>
                            <select class="form-select" id="status" name="status">
                                <option value="">All Statuses</option>
                                <option value="completed" <%= filters.status === 'completed' ? 'selected' : '' %>>Completed</option>
                                <option value="pending" <%= filters.status === 'pending' ? 'selected' : '' %>>Pending</option>
                                <option value="failed" <%= filters.status === 'failed' ? 'selected' : '' %>>Failed</option>
                                <option value="refunded" <%= filters.status === 'refunded' ? 'selected' : '' %>>Refunded</option>
                                <option value="cancelled" <%= filters.status === 'cancelled' ? 'selected' : '' %>>Cancelled</option>
                            </select>
                        </div>
                        <div class="col-lg-2 col-md-6">
                            <label for="type" class="form-label">Type</label>
                            <select class="form-select" id="type" name="type">
                                <option value="">All Types</option>
                                <option value="payment" <%= filters.type === 'payment' ? 'selected' : '' %>>Payment</option>
                                <option value="refund" <%= filters.type === 'refund' ? 'selected' : '' %>>Refund</option>
                                <option value="payout" <%= filters.type === 'payout' ? 'selected' : '' %>>Payout</option>
                                <option value="commission" <%= filters.type === 'commission' ? 'selected' : '' %>>Commission</option>
                            </select>
                        </div>
                        <div class="col-lg-2 col-md-6">
                            <label for="dateFrom" class="form-label">From Date</label>
                            <input type="date" class="form-control" id="dateFrom" name="dateFrom" value="<%= filters.dateFrom %>">
                        </div>
                        <div class="col-lg-2 col-md-6">
                            <label for="dateTo" class="form-label">To Date</label>
                            <input type="date" class="form-control" id="dateTo" name="dateTo" value="<%= filters.dateTo %>">
                        </div>
                        <div class="col-lg-1 col-md-6 d-flex align-items-end">
                            <div class="d-grid gap-2 w-100">
                                <button type="submit" class="btn btn-primary">
                                    <i class="fas fa-search"></i>
                                </button>
                                <a href="/users/billing" class="btn btn-outline-secondary">
                                    <i class="fas fa-times"></i>
                                </a>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <!-- Transaction History -->
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header">
                    <div class="d-flex justify-content-between align-items-center">
                        <h5 class="mb-0">
                            <i class="fas fa-history me-2"></i>Transaction History
                        </h5>
                        <div class="d-flex gap-2">
                            <small class="text-muted">
                                Showing <%= ((pagination.page - 1) * 10) + 1 %>-<%= Math.min(pagination.page * 10, pagination.totalTransactions) %> of <%= pagination.totalTransactions %> transactions
                            </small>
                        </div>
                    </div>
                </div>
                <div class="card-body p-0">
                    <% if (transactions.length > 0) { %>
                        <div class="table-responsive">
                            <table class="table table-hover mb-0">
                                <thead class="table-light">
                                    <tr>
                                        <th>Date</th>
                                        <th>Transaction ID</th>
                                        <th>Type</th>
                                        <th>Description</th>
                                        <th>Amount</th>
                                        <th>Status</th>
                                        <th>Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <% transactions.forEach(transaction => { 
                                        const isGuestTransaction = transaction.payer._id.equals(currentUser._id);
                                        const otherParty = isGuestTransaction ? transaction.payee : transaction.payer;
                                        const transactionType = isGuestTransaction ? 'Payment' : 'Earning';
                                        const amount = isGuestTransaction ? transaction.amount : (transaction.amount - (transaction.commission?.amount || 0));
                                    %>
                                        <tr>
                                            <td>
                                                <div>
                                                    <strong><%= new Date(transaction.createdAt).toLocaleDateString() %></strong>
                                                    <br>
                                                    <small class="text-muted"><%= new Date(transaction.createdAt).toLocaleTimeString() %></small>
                                                </div>
                                            </td>
                                            <td>
                                                <code class="small"><%= transaction.transactionId %></code>
                                            </td>
                                            <td>
                                                <span class="badge bg-<%= 
                                                    transaction.type === 'payment' ? 'primary' :
                                                    transaction.type === 'refund' ? 'info' :
                                                    transaction.type === 'payout' ? 'success' :
                                                    'warning'
                                                %>">
                                                    <%= transaction.type.charAt(0).toUpperCase() + transaction.type.slice(1) %>
                                                </span>
                                            </td>
                                            <td>
                                                <div>
                                                    <div class="fw-medium">
                                                        <%= transaction.booking?.listing?.title || 'Booking Payment' %>
                                                    </div>
                                                    <small class="text-muted">
                                                        <%= transactionType %> with <%= otherParty.username || otherParty.email %>
                                                    </small>
                                                    <% if (transaction.metadata?.description) { %>
                                                        <br>
                                                        <small class="text-muted"><%= transaction.metadata.description %></small>
                                                    <% } %>
                                                </div>
                                            </td>
                                            <td>
                                                <div class="text-end">
                                                    <div class="fw-bold <%= isGuestTransaction ? 'text-danger' : 'text-success' %>">
                                                        <%= isGuestTransaction ? '-' : '+' %><%= currency %> <%= amount.toLocaleString() %>
                                                    </div>
                                                    <% if (!isGuestTransaction && transaction.commission?.amount > 0) { %>
                                                        <small class="text-muted">
                                                            Fee: <%= currency %> <%= transaction.commission.amount.toLocaleString() %>
                                                        </small>
                                                    <% } %>
                                                </div>
                                            </td>
                                            <td>
                                                <span class="badge bg-<%= 
                                                    transaction.status === 'completed' ? 'success' :
                                                    transaction.status === 'pending' ? 'warning' :
                                                    transaction.status === 'failed' ? 'danger' :
                                                    transaction.status === 'refunded' ? 'info' :
                                                    'secondary'
                                                %>">
                                                    <%= transaction.status.charAt(0).toUpperCase() + transaction.status.slice(1) %>
                                                </span>
                                            </td>
                                            <td>
                                                <div class="btn-group btn-group-sm">
                                                    <button class="btn btn-outline-primary" 
                                                            onclick="viewTransaction('<%= transaction._id %>')"
                                                            title="View Details">
                                                        <i class="fas fa-eye"></i>
                                                    </button>
                                                    <button class="btn btn-outline-success" 
                                                            onclick="downloadReceipt('<%= transaction._id %>')"
                                                            title="Download Receipt">
                                                        <i class="fas fa-download"></i>
                                                    </button>
                                                    <% if (transaction.status === 'completed' && isGuestTransaction) { %>
                                                        <button class="btn btn-outline-info" 
                                                                onclick="requestRefund('<%= transaction._id %>')"
                                                                title="Request Refund">
                                                            <i class="fas fa-undo"></i>
                                                        </button>
                                                    <% } %>
                                                </div>
                                            </td>
                                        </tr>
                                    <% }); %>
                                </tbody>
                            </table>
                        </div>
                    <% } else { %>
                        <div class="text-center py-5">
                            <i class="fas fa-receipt fa-3x text-muted mb-3"></i>
                            <h5 class="text-muted">No transactions found</h5>
                            <p class="text-muted">Your transaction history will appear here</p>
                            <a href="/listings" class="btn btn-primary">Browse Listings</a>
                        </div>
                    <% } %>
                </div>
                
                <!-- Pagination -->
                <% if (pagination.totalPages > 1) { %>
                    <div class="card-footer">
                        <nav aria-label="Transaction pagination">
                            <ul class="pagination justify-content-center mb-0">
                                <% if (pagination.hasPrevPage) { %>
                                    <li class="page-item">
                                        <a class="page-link" href="/users/billing?page=<%= pagination.page - 1 %>&status=<%= filters.status %>&type=<%= filters.type %>&dateFrom=<%= filters.dateFrom %>&dateTo=<%= filters.dateTo %>&search=<%= encodeURIComponent(filters.search) %>">
                                            <i class="fas fa-chevron-left"></i>
                                        </a>
                                    </li>
                                <% } %>
                                
                                <% 
                                    const startPage = Math.max(1, pagination.page - 2);
                                    const endPage = Math.min(pagination.totalPages, pagination.page + 2);
                                    
                                    for (let i = startPage; i <= endPage; i++) { 
                                %>
                                    <li class="page-item <%= i === pagination.page ? 'active' : '' %>">
                                        <a class="page-link" href="/users/billing?page=<%= i %>&status=<%= filters.status %>&type=<%= filters.type %>&dateFrom=<%= filters.dateFrom %>&dateTo=<%= filters.dateTo %>&search=<%= encodeURIComponent(filters.search) %>">
                                            <%= i %>
                                        </a>
                                    </li>
                                <% } %>
                                
                                <% if (pagination.hasNextPage) { %>
                                    <li class="page-item">
                                        <a class="page-link" href="/users/billing?page=<%= pagination.page + 1 %>&status=<%= filters.status %>&type=<%= filters.type %>&dateFrom=<%= filters.dateFrom %>&dateTo=<%= filters.dateTo %>&search=<%= encodeURIComponent(filters.search) %>">
                                            <i class="fas fa-chevron-right"></i>
                                        </a>
                                    </li>
                                <% } %>
                            </ul>
                        </nav>
                    </div>
                <% } %>
            </div>
        </div>
    </div>
</div>

<!-- Export Modal -->
<div class="modal fade" id="exportModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Export Billing Data</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <form action="/users/billing/export" method="POST">
                <div class="modal-body">
                    <div class="mb-3">
                        <label for="exportFormat" class="form-label">Export Format</label>
                        <select class="form-select" id="exportFormat" name="format" required>
                            <option value="csv">CSV (Comma Separated Values)</option>
                            <option value="pdf">PDF Report</option>
                        </select>
                    </div>
                    <div class="row">
                        <div class="col-md-6">
                            <label for="exportDateFrom" class="form-label">From Date</label>
                            <input type="date" class="form-control" id="exportDateFrom" name="dateFrom">
                        </div>
                        <div class="col-md-6">
                            <label for="exportDateTo" class="form-label">To Date</label>
                            <input type="date" class="form-control" id="exportDateTo" name="dateTo">
                        </div>
                    </div>
                    <div class="mt-3">
                        <label for="exportStatus" class="form-label">Status Filter</label>
                        <select class="form-select" id="exportStatus" name="status">
                            <option value="">All Statuses</option>
                            <option value="completed">Completed</option>
                            <option value="pending">Pending</option>
                            <option value="failed">Failed</option>
                            <option value="refunded">Refunded</option>
                        </select>
                    </div>
                    <div class="mt-3">
                        <label for="exportType" class="form-label">Type Filter</label>
                        <select class="form-select" id="exportType" name="type">
                            <option value="">All Types</option>
                            <option value="payment">Payment</option>
                            <option value="refund">Refund</option>
                            <option value="payout">Payout</option>
                            <option value="commission">Commission</option>
                        </select>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-primary">
                        <i class="fas fa-download me-2"></i>Export
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

<!-- Transaction Detail Modal -->
<div class="modal fade" id="transactionModal" tabindex="-1">
    <div class="modal-dialog modal-lg">
        <div class="modal-content" id="transactionModalContent">
            <!-- Content will be loaded dynamically -->
        </div>
    </div>
</div>

