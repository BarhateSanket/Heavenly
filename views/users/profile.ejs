<% layout("layouts/boilerplate") %>

<div class="row mt-3">
    <div class="col-md-8 offset-md-2">
        <div class="card">
            <div class="card-body">
                <h2 class="card-title"><%= user.username || user.email %></h2>

                <% if (user.isPrivate) { %>
                    <span class="badge bg-secondary">Private Account</span>
                <% } else { %>
                    <span class="badge bg-success">Public Account</span>
                <% } %>

                <div class="mt-3">
                    <div class="row">
                        <div class="col-4 text-center">
                            <h4 class="followers-count"><%= user.followersCount %></h4>
                            <p class="text-muted mb-0">
                                <a href="/users/<%= user._id %>/followers" class="text-decoration-none">Followers</a>
                            </p>
                        </div>
                        <div class="col-4 text-center">
                            <h4 class="following-count"><%= user.followingCount %></h4>
                            <p class="text-muted mb-0">
                                <a href="/users/<%= user._id %>/following" class="text-decoration-none">Following</a>
                            </p>
                        </div>
                        <div class="col-4 text-center">
                            <h4>0</h4>
                            <p class="text-muted mb-0">Listings</p>
                        </div>
                    </div>
                    
                    <script src="/js/follow.js"></script>
                </div>

                <% if (isOwnProfile) { %>
                    <div class="mt-3">
                        <div class="d-flex flex-wrap gap-2">
                            <a href="/users/profile/edit" class="btn btn-outline-primary btn-sm">
                                <i class="fas fa-edit me-1"></i>Edit Profile
                            </a>
                            <a href="/users/billing" class="btn btn-outline-success btn-sm">
                                <i class="fas fa-receipt me-1"></i>Billing History
                            </a>
                            <a href="/users/settings" class="btn btn-outline-secondary btn-sm">
                                <i class="fas fa-cog me-1"></i>Settings
                            </a>
                            <form action="/users/privacy/toggle" method="POST" class="d-inline">
                                <button type="submit" class="btn btn-outline-info btn-sm">
                                    <%= user.isPrivate ? 'Make Public' : 'Make Private' %>
                                </button>
                            </form>
                        </div>
                    </div>
                <% } else if (typeof isFollowing !== 'undefined') { %>
                    <div class="mt-3">
                        <button type="button"
                                class="btn <%= isFollowing ? 'btn-outline-danger' : 'btn-primary' %> btn-sm follow-btn"
                                data-user-id="<%= user._id %>"
                                data-action="<%= isFollowing ? 'unfollow' : 'follow' %>">
                            <%= isFollowing ? 'Unfollow' : 'Follow' %>
                        </button>
                    </div>
                <% } %>
            </div>
        </div>
    </div>
</div>