<script>
// Simple search functionality for help center
document.addEventListener('DOMContentLoaded', function() {
    const searchInput = document.getElementById('helpSearch');
    const helpTopics = document.querySelectorAll('.help-topic');

    searchInput.addEventListener('input', function() {
        const searchTerm = this.value.toLowerCase();

        helpTopics.forEach(topic => {
            const title = topic.querySelector('.card-title').textContent.toLowerCase();
            const description = topic.querySelector('.card-text').textContent.toLowerCase();

            if (title.includes(searchTerm) || description.includes(searchTerm)) {
                topic.style.display = '';
            } else {
                topic.style.display = 'none';
            }
        });
    });
});
</script>