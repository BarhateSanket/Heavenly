<% layout("layouts/boilerplate") %>

<div class="container-fluid">
    <!-- Hero Section -->
    <div class="row mb-5">
        <div class="col-12 text-center py-5" style="background: linear-gradient(135deg, #667eea 0%, #764ba2 100%); color: white; border-radius: 8px;">
            <h1 class="display-4 fw-bold mb-3">Find your perfect stay</h1>
            <p class="lead mb-4">Discover amazing places to stay around the world</p>

            <!-- Search Bar -->
            <div class="row justify-content-center">
                <div class="col-lg-8">
                    <form method="POST" action="/search" class="search-form">
                        <div class="row g-3">
                            <div class="col-md-8">
                                <input type="text" name="destination" class="form-control form-control-lg" placeholder="Where are you going?" required>
                            </div>
                            <div class="col-md-4">
                                <button type="submit" class="btn btn-light btn-lg w-100">
                                    <i class="fas fa-search me-2"></i>Search
                                </button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <!-- Featured Listings Section -->
    <div class="row mb-5">
        <div class="col-12">
            <h2 class="mb-4">Featured Listings</h2>
            <div class="row row-cols-1 row-cols-md-2 row-cols-xl-3 g-4">
                <% for (let listing of featuredListings) { %>
                    <div class="col">
                        <a href="/listings/<%=listing._id%>" class="listing-link">
                            <div class="card listing-card h-100">
                                <div class="position-relative">
                                    <img data-src="<%=listing.image%>" class="card-img-top" alt="<%=listing.title%> - <%=listing.location%>, <%=listing.country%>" style="height: 250px;" loading="lazy" decoding="async">
                                    <!-- Heart Icon for Wishlist Toggle -->
                                    <% if (currUser) { %>
                                        <button type="button" class="btn btn-link position-absolute top-0 end-0 m-2 p-0 wishlist-toggle"
                                                data-listing-id="<%= listing._id %>"
                                                data-is-favorited="<%= listing.isFavorited ? 'true' : 'false' %>"
                                                style="z-index: 10;">
                                            <i class="<%= listing.isFavorited ? 'fas' : 'far' %> fa-heart <%= listing.isFavorited ? 'text-danger' : 'text-white' %>" style="font-size: 1.5rem; text-shadow: 0 0 3px rgba(0,0,0,0.5);"></i>
                                        </button>
                                    <% } %>

                                    <!-- Featured Ribbon -->
                                    <% if (listing.isFeatured && new Date(listing.featuredExpiry) > new Date()) { %>
                                        <div class="featured-ribbon">
                                            <span>FEATURED</span>
                                        </div>
                                    <% } %>

                                    <!-- Premium Badge -->
                                    <% if (listing.premiumTier && new Date(listing.premiumExpiry) > new Date()) { %>
                                        <div class="premium-badge">
                                            <i class="fas fa-crown"></i>
                                            <span><%= listing.premiumTier.toUpperCase() %></span>
                                        </div>
                                    <% } %>
                                    <div class="card-img-overlay d-flex align-items-end">
                                        <div class="w-100 p-3">
                                            <div class="d-flex justify-content-between align-items-end">
                                                <div>
                                                    <h5 class="text-white mb-1 fw-bold"><%=listing.title%></h5>
                                                    <p class="text-white-50 mb-0 small"><%=listing.location%></p>
                                                </div>
                                                <div class="text-end">
                                                    <div class="bg-white bg-opacity-90 rounded-pill px-3 py-1">
                                                        <span class="fw-bold text-dark">â‚¹<%= listing.price.toLocaleString("en-IN") %></span>
                                                        <small class="text-muted">/night</small>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="card-body d-flex flex-column">
                                    <div class="d-flex justify-content-between align-items-start mb-2">
                                        <div class="flex-grow-1">
                                            <h6 class="card-title mb-1"><%=listing.title%></h6>
                                            <p class="card-text text-muted small mb-0"><%=listing.location%>, <%=listing.country%></p>
                                        </div>
                                    </div>
                                    <div class="mt-auto">
                                        <div class="d-flex align-items-center justify-content-between">
                                            <div class="d-flex align-items-center">
                                                <i class="fas fa-star text-warning me-1"></i>
                                                <span class="small fw-medium">4.8</span>
                                                <span class="text-muted small ms-1">(120)</span>
                                            </div>
                                            <small class="text-muted"><%=listing.maxGuests%> guests</small>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </a>
                    </div>
                <% } %>
            </div>
        </div>
    </div>

    <!-- Categories Section -->
    <div class="row mb-5">
        <div class="col-12">
            <h2 class="mb-4">Explore by Category</h2>
            <div class="row row-cols-2 row-cols-md-4 g-4">
                <div class="col">
                    <a href="/listings?category=beach" class="text-decoration-none">
                        <div class="card category-card text-center h-100">
                            <div class="card-body">
                                <i class="fas fa-umbrella-beach fa-3x text-primary mb-3"></i>
                                <h5 class="card-title">Beachfront</h5>
                                <p class="card-text text-muted">Relax by the sea</p>
                            </div>
                        </div>
                    </a>
                </div>
                <div class="col">
                    <a href="/listings?category=mountain" class="text-decoration-none">
                        <div class="card category-card text-center h-100">
                            <div class="card-body">
                                <i class="fas fa-mountain fa-3x text-success mb-3"></i>
                                <h5 class="card-title">Mountains</h5>
                                <p class="card-text text-muted">Adventure awaits</p>
                            </div>
                        </div>
                    </a>
                </div>
                <div class="col">
                    <a href="/listings?category=city" class="text-decoration-none">
                        <div class="card category-card text-center h-100">
                            <div class="card-body">
                                <i class="fas fa-city fa-3x text-warning mb-3"></i>
                                <h5 class="card-title">City</h5>
                                <p class="card-text text-muted">Urban experiences</p>
                            </div>
                        </div>
                    </a>
                </div>
                <div class="col">
                    <a href="/listings?category=cabin" class="text-decoration-none">
                        <div class="card category-card text-center h-100">
                            <div class="card-body">
                                <i class="fas fa-home fa-3x text-info mb-3"></i>
                                <h5 class="card-title">Cabins</h5>
                                <p class="card-text text-muted">Cozy retreats</p>
                            </div>
                        </div>
                    </a>
                </div>
            </div>
        </div>
    </div>

    <!-- Call-to-Action Sections -->
    <div class="row mb-5">
        <div class="col-12">
            <div class="row g-4">
                <div class="col-md-6">
                    <div class="card cta-card text-white" style="background: linear-gradient(135deg, #ff9a9e 0%, #fecfef 100%);">
                        <div class="card-body text-center py-5">
                            <i class="fas fa-home fa-4x mb-3"></i>
                            <h3 class="card-title">Become a Host</h3>
                            <p class="card-text">Share your space and earn money hosting travelers</p>
                            <a href="/listings/new" class="btn btn-light btn-lg">Get Started</a>
                        </div>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="card cta-card text-white" style="background: linear-gradient(135deg, #a8edea 0%, #fed6e3 100%);">
                        <div class="card-body text-center py-5">
                            <i class="fas fa-globe fa-4x mb-3"></i>
                            <h3 class="card-title">Explore Destinations</h3>
                            <p class="card-text">Discover new places and create unforgettable memories</p>
                            <a href="/listings" class="btn btn-light btn-lg">Explore Now</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>