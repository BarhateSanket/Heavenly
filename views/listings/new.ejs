<% layout("layouts/boilerplate") %>
<br /><br />
<h3>Create a New Listing</h3>
<br/>
<div class="row">
  <div class="col-md-8 offset-md-2">
    <form method="POST" action="/listings" class="needs-validation" novalidate>
      <div class="mb-3">
        <label for="title" class="form-label">Title</label>
        <input name="listing[title]" placeholder="enter title" type="text" class="form-control" required/>
        <div class="valid-feedback">
          Looks good!
        </div>
      </div>
      <br /><br />
      <div class="mb-3">
        <label for="description" class="form-label">Description</label>
        <textarea
          name="listing[description]"
          placeholder="enter description"
          class="form-control"
          required
        ></textarea>
        <div class="invalid-feedback">
          Please Enter a Valid Description!
        </div>
      </div>
      <br /><br />
      <div class="mb-3">
        <label for="image" class="form-label">Image</label>
        <input
        name="listing[image]"
        placeholder="enter image URL/Link"
        type="text"
        class="form-control"
        required
      />
        <div class="invalid-feedback">
          Please provide a valid image URL!
        </div>
        <div class="form-text">
          You can upload an image to a service like Cloudinary or Imgur and paste the URL here.
        </div>
      </div>
      <br /><br />
      <div class="row">
      <div class="mb-3 col-md-4">
        <label for="price" class="form-label">Price</label>
        <input name="listing[price]" placeholder="enter price" type="number" class="form-control" required/>
        <div class="invalid-feedback">
          Price Should be Valid!
        </div>
      </div>
      <br /><br />
      <div class="mb-3 col-md-8">
        <label for="country" class="form-label">Country</label>
        <input name="listing[country]" placeholder="enter country" type="text" class="form-control" required/>
        <div class="invalid-feedback">
          Country must be Valid!
        </div>
      </div>
      </div>
      <br /><br />
      <div class="mb-3">
        <label for="location" class="form-label">Location</label>
        <input name="listing[location]" placeholder="enter location" type="text" class="form-control" required/>
        <div class="invalid-feedback">
          Location must be Valid!
        </div>
      </div>
      <br /><br />
      <div class="mb-3">
        <label class="form-label">Select Location on Map</label>
        <div id="map" style="height: 400px;" class="mb-3"></div>
        <input type="hidden" name="listing[geometry][type]" value="Point">
        <input type="hidden" id="lng" name="listing[geometry][coordinates][0]">
        <input type="hidden" id="lat" name="listing[geometry][coordinates][1]">
      </div>
      <br /><br />
      <button class="btn btn-dark add-btn">Add</button>
      <br /><br />
    </form>
  </div>
</div>

<script>
  const map = L.map('map').setView([20.5937, 78.9629], 5); // Default to India

  L.tileLayer('https://{s}.tile.openstreetmap.org/{z}/{x}/{y}.png', {
    attribution: 'Â© OpenStreetMap contributors'
  }).addTo(map);

  let marker;

  map.on('click', function(e) {
    const { lat, lng } = e.latlng;
    document.getElementById('lat').value = lat;
    document.getElementById('lng').value = lng;

    if (marker) {
      marker.setLatLng([lat, lng]);
    } else {
      marker = L.marker([lat, lng]).addTo(map);
    }
  });
</script>